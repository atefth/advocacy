<p id="notice"><%= notice %></p>

<h1>Case Files</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>File received on</th>
      <th>Advocate</th>
      <th>Client</th>
      <th>Appeal on</th>
      <th>Convocation on</th>
      <th>Amount paid</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @case_files.each do |case_file| %>
      <tr>
        <td><%= case_file.name %></td>
        <td><%= case_file.file_received_on %></td>
        <td><%= case_file.advocate_id %></td>
        <td><%= case_file.client_id %></td>
        <td><%= case_file.appeal_on %></td>
        <td><%= case_file.convocation_on %></td>
        <td><%= case_file.amount_paid %></td>
        <td><%= case_file.status %></td>
        <td><%= link_to 'Show', case_file %></td>
        <td><%= link_to 'Edit', edit_case_file_path(case_file) %></td>
        <td><%= link_to 'Destroy', case_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

